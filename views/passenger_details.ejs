						<input type="button" class="btn medium color right" id="Continue" value="Continue">
						<!-- <a href="booking-step3.html" class="">Continue</a> -->
					</div>
				</div>

				<!--- Sidebar -->
				<aside class="one-fourth sidebar right">
					<!-- Widget -->
					<div class="widget">
						<h4>Booking summary</h4>
						<div class="summary">
							<div>
								<h5>DEPARTURE</h5>
								<dl>
									<dt>Date</dt>
