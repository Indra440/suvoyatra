        let queryValue = getUrlVars()["b"];

        const socket = io();
        socket.on('connect',function(){
            console.log("Connected to server");
        })
        console.log("queryValue ",queryValue);

        setInterval(() => {
            console.log("Print 1");
            socket.emit('fetchLocation',{id:queryValue})
        }, 3000);

        socket.on('getLocation'+String(queryValue),(position)=>{
            changeMarkerPosition(busMarker,position);
        })
        socket.on('fetchLocationError',(message)=>{
            console.log("message ",message);
            toastr.error(message.msg);
        })

        function initMap() {
            var options = {
                center: { lat: 22.9868, lng: 87.8550 },
                zoom: 9,
                mapTypeControl: true,
                navigationControlOptions: {
                    style: google.maps.NavigationControlStyle.SMALL
                },
                mapTypeId: google.maps.MapTypeId.ROADMAP
            }
            var map = new google.maps.Map(document.getElementById("map"),options);

            // Add Marker
            var icon = {
                path: "M-20,0a20,20 0 1,0 40,0a20,20 0 1,0 -40,0",
                fillColor: '#FF0000',
                fillOpacity: .6,
                anchor: new google.maps.Point(0,0),
                strokeWeight: 0,
                scale: 1
            }
            busMarker = new google.maps.Marker({
                position:{lat:22.9868,lng : 87.8550},
                map:map,
                draggable: false,
                // icon: icon
            })
        }

        function changeMarkerPosition(marker,position) {
            console.log("position",position);
            var latlng = new google.maps.LatLng(position.lat, position.lang);
            marker.setPosition(latlng);
        }

        function getUrlVars()
        {
            var vars = [], hash;
            var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
            for(var i = 0; i < hashes.length; i++)
            {
                hash = hashes[i].split('=');
                vars.push(hash[0]);
                vars[hash[0]] = hash[1];
            }
            return vars;
        }
    </script>
    <script async
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAF0pZyqjrMSgapmgr8NU-UX9HWFvpqWd0&callback=initMap">
